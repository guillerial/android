<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/teacher_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="6dp"
    card_view:cardCornerRadius="2dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <RelativeLayout
            android:id="@+id/view_hex_color"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/holo_blue_dark" >

            <TextView
                android:id="@+id/text_initial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="L"
                android:textSize="60sp"
                android:layout_centerInParent="true"
                android:textColor="@color/white"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/view_hex_color"
            android:textSize="@dimen/text_body"
            tools:text="Luis Álvarez Sabucedo" />

        <TextView
            android:id="@+id/text_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_name"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/view_hex_color"
            android:textSize="@dimen/text_small_body"
            tools:text="LuisSabucedo@det.uvigo.es" />
        <TextView
            android:id="@+id/text_office"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_email"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/view_hex_color"
            android:textSize="12dp"
            tools:text="Despacho B-305" />

        <TextView
            android:id="@+id/text_tutorials"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/view_hex_color"
            android:layout_below="@id/text_office"
            android:layout_marginTop="5dp"
            android:textSize="12dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
